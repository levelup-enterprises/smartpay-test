# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = false

[{bower.json,package.json}]
indent_size = 2

[*.{txt,md,mdown,markdown}]
indent_style = tab

[*.php]
indent_style = tab
ij_php_keep_indents_on_empty_lines = true

[*.js]
indent_style = tab
ij_javascript_keep_indents_on_empty_lines = true

[*.yml]
indent_style = space
